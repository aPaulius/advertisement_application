<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Advertisement Application{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    </head>
    <body class="background-color">

        <div class="container-fluid">

            <nav class="navbar navbar-default">
              <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand" href="{{ path('index') }}">Advertisement Application</a>
                </div>
                <div>
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user %}
                              <li><a class="nav-button" href="{{ path('post_advertisement') }}">Post Advertisement</a></li>
                              <li><a class="nav-button" href="{{ path('user_advertisements') }}">My Advertisements</a></li>
                              <li><a class="nav-button" href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                        {% else %}
                              <li><a class="nav-button" href="{{ path('fos_user_security_login') }}">Log in</a></li>
                              <li><a class="nav-button" href="{{ path('fos_user_registration_register') }}">New User Registration</a></li>
                        {% endif %}
                    </ul>
                </div>
            </nav>


            {% block content %}{% endblock %}

        </div>
    </body>
</html>
